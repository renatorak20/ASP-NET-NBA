@model NBA.Model.Game

@{
    var pattern = System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower();
    pattern = pattern.Replace("DD", "D").Replace("D", "DD");
    pattern = pattern.Replace("MM", "M").Replace("M", "MM");
}

<div class="flex-container">
    <div class="main">
        <div class="team">
            <label class="control-label home-label">Home Team</label>
            <div>
                <select asp-for="TeamHomeID" asp-items="ViewBag.PossibleTeams" class="form-control home-team-select" id="home-team-select"></select>
                <span asp-validation-for="TeamHomeID" class="text-danger"></span>
            </div>
            <div>
                <label class="control-label home-label">Home Score</label>
                <input asp-for="HomeScore" class="form-control" />
                <span asp-validation-for="HomeScore" class="text-danger"></span>
            </div>
        </div>
        <div class="team">
            <label class="control-label away-label">Away Team</label>
            <div>
                <select asp-for="TeamAwayID" asp-items="ViewBag.PossibleTeams" class="form-control away-team-select" id="away-team-select"></select>
                <span asp-validation-for="TeamAwayID" class="text-danger"></span>
            </div>
            <div>
                <label class="control-label home-label">Away Score</label>
                <input asp-for="AwayScore" class="form-control" />
                <span asp-validation-for="AwayScore" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label">Venue</label>
        <div class="col-sm-10">
            <select asp-for="VenueID" asp-items="ViewBag.PossibleVenues" class="form-control"></select>
            <span asp-validation-for="VenueID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Date of game</label>

        <div class="input-group date inp-datepicker" data-format="@pattern">
            <input type="text" class="form-control" asp-for="DateOfGame" />
            <span class="input-group-append">
                <span class="input-group-text bg-light d-block">
                    <i class="fa fa-calendar"></i>
                </span>
            </span>
        </div>
        <span asp-validation-for="DateOfGame" class="text-danger"></span>
    </div>

</div>
<div class="form-group row justify-content-center">
    <div class="col-sm-10 text-center">
        <input type="submit" value="Save" class="btn btn-outline-success" />
    </div>
</div>

<style>

    .main {
        display: flex;
        flex-direction: row;
    }

    .team {
        display: flex;
        flex-direction: column;
    }

</style>





