@using NBA.Model;
@model List<Game>

<table style="margin-top: 20px;" id="tablica" class="table table-condensed">
	<thead>
		<tr>
			<th>Home Team</th>
			<th>Away Team</th>
			<th>Venue</th>
			<th>Date</th>
			<th>Home Score</th>
			<th>Away Score</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var game in Model)
		{
			<tr>
				<td>@game.TeamHome?.Name</td>
				<td>@game.TeamAway?.Name</td>
				<td>@game.Venue?.Name</td>
				<td>@(game.DateOfGame.Value.ToString("yyyy-MM-dd"))</td>
				<td>@game.HomeScore</td>
				<td>@game.AwayScore</td>
				<td>
					<button type="button" class="btn btn-warning">
						<a asp-action="Edit" asp-route-id="@game.ID" style="color:white">Edit</a>
					</button>
				</td>
				<td>
					<button type="button" class="btn btn-danger">
						<a asp-action="Delete" asp-route-id="@game.ID" style="color:white">Delete</a>
					</button>
				</td>
			</tr>
		}
	</tbody>
</table>
