@using NBA.Model
@model TeamDetailsViewModel

<table style="margin-top: 20px;" id="tablica" class="table table-condensed">
	<thead>
		<tr>
			<th>Player</th>
			<th>Country</th>
			<th>Position</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Players)
		{
			<tr>
				<td>
					<a asp-action="Details" asp-controller="Player" asp-route-id="@item.ID">@item.FullName</a>
				</td>
				<td>@item.Country?.Name</td>
				<td>@item.Position?.Name</td>
			</tr>
		}
	</tbody>
</table>
