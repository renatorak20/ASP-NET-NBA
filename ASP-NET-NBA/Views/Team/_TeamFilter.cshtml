@using ASP_NET_NBA.Models

@model TeamFilterModel

<form action="@Url.Action("Index")" method="post" id="form">
	<div class="row">
		<div class="col">
			<input asp-for="Team" class="form-control" type="text" placeholder="Team" />
		</div>
		<div class="col">
			<input asp-for="Venue" class="form-control" type="text" placeholder="Venue" />
		</div>
		<div class="col">
			<select asp-for="Conference" class="form-control" asp-items="ViewBag.PossibleConferences"/>
		</div>
		<div class="col">
			<button type="button" id="searchButton" class="btn btn-outline-info">Search</button>
		</div>
	</div>
</form>